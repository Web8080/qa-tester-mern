FROM node:22-alpine

WORKDIR /app

# Copy package files and patches (pnpm patchedDependencies)
COPY package.json ./
COPY patches ./patches

# Install dependencies
RUN npm install -g pnpm && pnpm install

# Copy source code, shared lib, and Vite config (port 3000, host 0.0.0.0)
COPY client ./client
COPY shared ./shared
COPY tsconfig.json ./
COPY vite.config.ts ./

# Expose port
EXPOSE 3000

# Start development server (Vite)
CMD ["npm", "run", "dev:web"]

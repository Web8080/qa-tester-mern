FROM node:22-alpine

WORKDIR /app

# Copy package files and patches (pnpm patchedDependencies)
COPY package.json ./
COPY patches ./patches

# Install dependencies
RUN npm install -g pnpm && pnpm install

# Copy source code
COPY server ./server
COPY scripts ./scripts
COPY tsconfig.json ./

# Create uploads directory
RUN mkdir -p uploads

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]
